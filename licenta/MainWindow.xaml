<Window x:Class="licenta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:licenta"
        xmlns:viewModel="clr-namespace:licenta.ViewModel"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:view="clr-namespace:licenta.View"
        mc:Ignorable="d"
        Title="MainWindowView" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
            <view:HomeView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModel:MapViewModel}">
            <view:MapView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModel:ParcelViewModel}">
            <view:ParcelView />
        </DataTemplate>
    </Window.Resources>

    <Border CornerRadius="10"
            BorderThickness="1">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0" />
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5" />
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1" />
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <!--Navigation menu-->
                <ColumnDefinition Width="250" />
                <!--Content section-->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--Navigation Menu-->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.0" />
                        <GradientStop Color="{StaticResource winBorderColor3}" Offset="0.2" />
                        <GradientStop Color="{StaticResource winBorderColor4}" Offset="0.5" />
                        <!-- <GradientStop Color="{StaticResource winBorderColor5}" Offset="0.7" /> -->
                        <GradientStop Color="{StaticResource winBorderColor3}" Offset="0.7" />
                        <GradientStop Color="{StaticResource winBorderColor4}" Offset="1.0" />

                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>

                    <!--Logo-->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,25,0,40">

                        <Image Source="/Images/logo.png" Height="30" />
                        <TextBlock Text="licenta"
                                   Foreground="White"
                                   FontSize="20"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0" />
                    </StackPanel>

                    <!--Menu Buttons-->
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color1}"
                                 IsChecked="True"
                                 Command="{Binding ShowHomeViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                            <TextBlock Text="Home" Style="{StaticResource menuButtonText}"></TextBlock>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color2}"
                                 Command="{Binding ShowMapViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Map" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                            <TextBlock Text="Harta" Style="{StaticResource menuButtonText}"></TextBlock>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color3}"
                                 Command="{Binding ShowParcelViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="LocationCrosshairs" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                            <TextBlock Text="Parcele" Style="{StaticResource menuButtonText}"></TextBlock>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color4}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Clipboard" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                            <TextBlock Text="Tasks" Style="{StaticResource menuButtonText}"></TextBlock>
                        </StackPanel>
                    </RadioButton>

                </StackPanel>
            </Border>

            <!--Main Section-->
            <Border CornerRadius="0,10,10,0"
        Grid.Column="1">
    <Border.Background>
        <SolidColorBrush Color="{StaticResource primaryBackColor3}" />
    </Border.Background>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Control bar -->
            <RowDefinition Height="25" />
            <!-- Content section / Child views -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Control bar -->
        <StackPanel x:Name="pnlControlBar"
                    Grid.Row="0"
                    Orientation="Horizontal"
                    FlowDirection="RightToLeft"
                    Background="Transparent"
                    Margin="0,0,5,0"
                    MouseLeftButtonDown="PnlControlBar_OnMouseLeftButtonDown">
            <!-- Butoane de control (Close, Minimize, Maximize) -->
            <Button x:Name="btnClose"
                    Style="{StaticResource controlButton}"
                    Tag="{StaticResource color11}"
                    Click="BtnClose_OnClick">
                <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"></fa:IconImage>
            </Button>
            <Button x:Name="btnMinimize"
                    Style="{StaticResource controlButton}"
                    Tag="{StaticResource color2}"
                    Click="BtnMinimize_OnClick">
                <fa:IconImage Icon="WindowMinimize" Style="{StaticResource controlButtonIcon}"></fa:IconImage>
            </Button>
            <Button x:Name="btnMaximize"
                    Style="{StaticResource controlButton}"
                    Tag="{StaticResource color2}"
                    Click="BtnMaximize_OnClick">
                <fa:IconImage Icon="WindowMaximize" Style="{StaticResource controlButtonIcon}"></fa:IconImage>
            </Button>
        </StackPanel>
        
        <!-- Content section / Child views (acum fără header) -->
        <ContentControl Content="{Binding CurrentChildView}"
                        Grid.Row="1"
                        Margin="0"/>
    </Grid>
</Border>
        </Grid>

    </Border>
</Window>