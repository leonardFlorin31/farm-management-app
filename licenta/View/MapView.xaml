<UserControl x:Class="licenta.View.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:licenta.View"
             xmlns:windowsPresentation="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behavior="clr-namespace:licenta.Behavior"
             xmlns:viewModel="clr-namespace:licenta.ViewModel">
    
    <UserControl.Resources>
        <!-- Custom ToggleButton for ComboBox -->
        <ControlTemplate x:Key="CustomToggleButton" TargetType="ToggleButton">
            <Grid>
                <Border Name="Border" Background="White" BorderBrush="Black" BorderThickness="1" />
                <Grid>
                    <ContentPresenter HorizontalAlignment="Left" Margin="5,0,25,0" VerticalAlignment="Center"/>
                    <Path Name="Arrow" Fill="Black"
                          Data="M 0 0 L 4 4 L 8 0 Z"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Margin="0,0,5,0"/>
                </Grid>
            </Grid>
        </ControlTemplate>

        <!-- Custom ComboBox Style -->
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="FrameworkElement.OverridesDefaultStyle" Value="True" />
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="DropDownToggle"
                                          ClickMode="Press"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Template="{StaticResource CustomToggleButton}" />
                            <ContentPresenter Name="ContentSite"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Margin="5,0,0,0" />
                            <Popup Name="Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide">
                                <Border BorderBrush="{TemplateBinding BorderBrush}" Background="White">
                                    <ScrollViewer>
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        
        <!-- Harta -->
        <ContentControl Content="{Binding MapControl}" />

        <!-- Overlay pentru input, plasat în colțul stânga sus -->
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="220" Height="100" Background="Transparent">
            <!-- Folosim o Grid pentru a suprapune TextBox-ul și TextBlock-ul placeholder -->
            <TextBox x:Name="InputTextBox"
                     Text="{Binding PolygonName, UpdateSourceTrigger=PropertyChanged}" 
                     Width="180" Height="30"
                     Background="White"
                     Padding="5"/>
            <TextBlock Text="Introduceti numele parcelei..."
                       Foreground="Gray"
                       Margin="0,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       HorizontalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPlaceholderVisible}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            
            <StackPanel Margin="5,70,0,5">
                <!-- <TextBlock Text="Selectează un parc:"/> -->
                <ComboBox x:Name="comboBox"
                          Width="150"
                          ItemsSource="{Binding CenterPointNames}"
                          SelectedItem="{Binding SelectedCenterPointName, Mode=TwoWay}"
                          Style="{StaticResource {x:Type ComboBox}}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SelectionChangedCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>
            </StackPanel>
            
        </Grid>

        <!-- Butonul de creare poligon, plasat în colțul din dreapta sus -->
        <Button Content="Creaza parcela" 
                Command="{Binding CreatePolygonCommand}" 
                Width="100" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="10" 
                Padding="5"
                Background="{StaticResource titleColor2}" 
                Foreground="White" 
                BorderBrush="Transparent" 
                FontWeight="Bold" />
        
        <Button Content="Sterge parcela" 
                Command="{Binding DeletePolygonCommand}" 
                Width="100" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="10,50,10,10"  
                Padding="5"
                Background="{StaticResource color12}" 
                Foreground="White" 
                BorderBrush="Transparent" 
                FontWeight="Bold" />
        
       <!--button for deleting the last marker -->
        <Button Content="Sterge ultimul marker" 
                Command="{Binding DeleteLastMarkerCommand}"
                Width="150" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="10,90,10,10" 
                Padding="5"
                Background="{StaticResource color12}" 
                Foreground="White" 
                BorderBrush="Transparent" 
                FontWeight="Bold" />
        
        <!-- button for switching map provider -->
        <Button Content="Schimba tipul hartii" 
                Command="{Binding ChangeMapTypeCommand}"
                Width="150" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="10,130,10,10" 
                Padding="5"
                Background="{StaticResource titleColor2}" 
                Foreground="White" 
                BorderBrush="Transparent" 
                FontWeight="Bold" />
    </Grid>
</UserControl>
