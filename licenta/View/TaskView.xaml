<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="licenta.View.TaskView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:licenta.ViewModel"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">

    <!-- Resurse locale -->
    <UserControl.Resources>
        <!-- Converter pentru Visibility (bool → Visibility) -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:TaskViewModel />
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/><!-- Header -->
            <RowDefinition Height="Auto"/><!-- Zona creare task -->
            <RowDefinition Height="*"/> <!-- Lista task-uri -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Icon + Titlu -->
        <fa:IconImage Icon="Clipboard"
                      Style="{StaticResource menuButtonIcon}"
                      Foreground="{StaticResource color4}"
                      Margin="0,0,10,0"
                      Grid.Row="0" Grid.Column="0"/>
        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Sarcini"
                   FontSize="18"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Foreground="{StaticResource color4}"/>

        <!-- Zona de creare task: vizibilă doar pentru manager/admin -->
        <Border Grid.Row="1"
                Grid.ColumnSpan="2"
                Padding="8"
                Background="#F5F5F5"
                CornerRadius="4"
                Visibility="{Binding CanCreateTasks, Converter={StaticResource BoolToVis}}"
                Margin="0,10,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBox Width="250"
                         Margin="0,0,10,0"
                         mah:TextBoxHelper.Watermark="Titlu nou sarcina"
                         Text="{Binding NewTaskTitle, UpdateSourceTrigger=PropertyChanged}"/>
                <ComboBox Width="150"
                          ItemsSource="{Binding StatusValues}"
                          mah:TextBoxHelper.Watermark="Angajat"
                          SelectedItem="{Binding NewTaskStatus}"/>
                <TextBox Width="250"
                         Margin="10,0,0,0"
                         mah:TextBoxHelper.Watermark="Descriere sarcina"
                         Text="{Binding NewTaskDescription, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Adaugă task"
                        Margin="10,0,0,0"
                        Command="{Binding CreateTaskCmd}"
                        IsEnabled="{Binding CanCreateTasks}"/>
            </StackPanel>
        </Border>

        <!-- Lista de task-uri -->
        <Border Margin="10,10,20,10"
                Grid.Row="2"
                Padding="10"
                CornerRadius="8"
                BorderThickness="2"
                Background="White"
                BorderBrush="{DynamicResource AccentColorBrush}">
            <Border.Effect>
                <DropShadowEffect Color="{StaticResource MahApps.Colors.Gray1}"
                                  BlurRadius="8"
                                  ShadowDepth="2"
                                  Opacity="0.5"/>
            </Border.Effect>
        <ListView Grid.Row="2"
                  Grid.ColumnSpan="2"
                  ItemsSource="{Binding Tasks}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Titlu"
                                    DisplayMemberBinding="{Binding Title}"
                                    Width="200"/>
                    <GridViewColumn Header="Asignat lui"
                                    DisplayMemberBinding="{Binding AssignedToUsername}"
                                    Width="150"/>
                    <GridViewColumn Header="Descriere sarcina"
                                    DisplayMemberBinding="{Binding Description}"
                                    Width="150"/>
                    <GridViewColumn Header="Status"
                                    Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding StatusValues}"
                                          SelectedItem="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsEnabled="{Binding CanChangeStatus}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView></Border>
    </Grid>
</UserControl>
