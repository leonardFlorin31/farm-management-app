<UserControl x:Class="licenta.View.AnimalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:licenta.View"
             xmlns:windowsPresentation="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behavior="clr-namespace:licenta.Behavior"
             xmlns:viewModel="clr-namespace:licenta.ViewModel">

    <UserControl.Resources>
        <local:CentroidToMarginConverter x:Key="CentroidToMarginConverter" />
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>
    
    <Grid>
        <!-- Harta -->
        <ContentControl Content="{Binding MapControl}" />

        <!-- Overlay pentru input, plasat în colțul stânga sus -->
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="220" Height="40" Background="Transparent">
            <!-- Folosim o Grid pentru a suprapune TextBox-ul și TextBlock-ul placeholder -->
            <TextBox x:Name="InputTextBox"
                     Text="{Binding AnimalName, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" Height="30"
                     Background="White"
                     Padding="5"/>
            <TextBlock Text="Enter parcel name..."
                       Foreground="Gray"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPlaceholderVisible}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <!-- Butonul de creare poligon, plasat în colțul din dreapta sus -->
        <Button Content="Create Polygon" 
                Command="{Binding CreatePolygonCommand}" 
                Width="100" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="10" 
                Padding="5"
                Background="{StaticResource titleColor2}" 
                Foreground="White" 
                BorderBrush="Transparent" 
                FontWeight="Bold" />
    </Grid>
</UserControl>
