<Window x:Class="licenta.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:licenta.View"
        xmlns:viewModel="clr-namespace:licenta.ViewModel"
        xmlns:customControls="clr-namespace:licenta.CustomControls"
        mc:Ignorable="d"
        Title="LoginView" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Windows_MouseDown">

    <Window.DataContext>
        <viewModel:LoginViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode="TwoWay"
                 Converter="{StaticResource BooleanToVisibility}" />
    </Window.Visibility>

    <Border CornerRadius="50"
            BorderThickness="5">
        <Border.Background>
            <ImageBrush ImageSource="/Images/background.jpg"
                        Stretch="UniformToFill">
            </ImageBrush>
        </Border.Background>

        <Border CornerRadius="50"
                BorderThickness="1"
                Opacity="0.90">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#6BFF84" Offset="0" />
                    <GradientStop Color="#4BBD5E" Offset="0.5" />
                    <GradientStop Color="#309C42" Offset="1" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                    <GradientStop Color="#6BFF84" Offset="0" />
                    <GradientStop Color="#4BBD5E" Offset="0.5" />
                    <GradientStop Color="#309C42" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Autentificare"
                               Foreground="White"
                               FontSize="10"
                               FontFamily="Arial"
                               FontWeight="Bold"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0" />

                    <Button x:Name="BtnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="Black"
                            FontSize="16"
                            FontFamily="Arial"
                            Cursor="Hand"
                            Margin="0,10,5,0"
                            Grid.Column="1"
                            Click="BtnMinimize_OnClick">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Aqua" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate>
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="BtnClose"
                            BorderThickness="0"
                            Content="x"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Arial"
                            Cursor="Hand"
                            Margin="0,10,5,0"
                            Grid.Column="2"
                            Click="BtnClose_OnClick">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="DarkRed" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate>
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                </Grid>

                <StackPanel Width="250"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,35,0,0">
                    <Image Source="/Images/logo.png"
                           Width="100"
                           Height="100" />

                    <TextBlock Text="Nume"
                               Foreground="White"
                               FontSize="25"
                               FontWeight="Medium"
                               FontFamily="Arial"
                               HorizontalAlignment="Center" />

                    <TextBlock Text="Nume de utilizator:"
                               Foreground="White"
                               FontWeight="Bold"
                               FontFamily="Arial"
                               Margin="0,35,0,0" />

                    <TextBox x:Name="txtUsername"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             Foreground="White"
                             CaretBrush="White"
                             BorderThickness="0, 0, 0, 1"
                             Height="28"
                             VerticalContentAlignment="Center"
                             FontWeight="Medium"
                             FontFamily="Arial"
                             Margin="0,5,0,0"
                             Padding="20,0,0,0">

                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/username.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left" />
                        </TextBox.Background>

                    </TextBox>

                    <TextBlock Text="Parola:"
                               Foreground="White"
                               FontWeight="Bold"
                               FontFamily="Arial"
                               Margin="0,15,0,0" />

                    <customControls:BindablePasswordBox
                        Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Height="28"
                        Margin="0,5,0,0">
                    </customControls:BindablePasswordBox>
                    
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="White"
                               FontWeight="Bold"
                               FontFamily="Arial"
                               Margin="0,10,0,0" 
                               TextWrapping="Wrap"/>
                    
                    <Button x:Name="btnLogin"
                            Command="{Binding LoginCommand}"
                            BorderThickness="0"
                            Content="Autentificare"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="0,15,0,0"
                            Click="BtnLogin_OnClickClick">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#EF2121" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="DarkRed" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,7.5,0,0">
                        <TextBlock Text="Ai uitat parola?"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="Light"
                                   FontFamily="Montserrat" />
                        <TextBlock Text="Resetare"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   FontFamily="Montserrat"
                                   Cursor="Hand"
                                   Margin="8,0,0,0" />
                    </StackPanel>

                </StackPanel>

            </Grid>

        </Border>
    </Border>

</Window>