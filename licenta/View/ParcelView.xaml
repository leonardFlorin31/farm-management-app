                </StackPanel>
                <StackPanel Margin="0, 5, 0, 5">
                    <TextBlock Text="{Binding Label9}" />
                    <TextBox Width="100" BorderThickness="2" BorderBrush="{StaticResource titleColor2}" Text="{Binding Field9, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </StackPanel>

            <Button Content="Save"
                    Width="80"
                    DockPanel.Dock="Right"
                    Margin="10" 
                    Padding="5"
                    Background="Black" 
                    Foreground="White" 
                    BorderBrush="Transparent" 
                    FontWeight="Bold"
                    Command="{Binding SaveCommand}" />
        </DockPanel>

