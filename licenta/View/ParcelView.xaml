<UserControl x:Class="licenta.View.ParcelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:licenta.View"
             xmlns:viewModel="clr-namespace:licenta.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <DockPanel Grid.Row="0" Margin="10">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <StackPanel Margin="5,5,0,5">
                    <TextBlock Text="Tipul parcelei" Margin="0,0,0,2"/>
                    <ComboBox Width="100"
                              ItemsSource="{Binding Options}"
                              SelectedItem="{Binding SelectedOption, Mode=TwoWay}" />
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="Numele Parcelei" Margin="0,0,0,2"/>
                    <ComboBox Width="100"
                              ItemsSource="{Binding Parcels}"
                              SelectedItem="{Binding SelectedParcel, Mode=TwoWay}" />
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="{Binding Label2}" Margin="0,0,0,2"/>
                    <TextBox Width="100" 
                             mah:TextBoxHelper.Watermark="Field2"
                             BorderThickness="2" 
                             BorderBrush="{StaticResource titleColor2}" 
                             Text="{Binding Field2, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="{Binding Label3}" Margin="0,0,0,2"/>
                    <TextBox Width="100" 
                             mah:TextBoxHelper.Watermark="Field3"
                             BorderThickness="2" 
                             BorderBrush="{StaticResource titleColor2}" 
                             Text="{Binding Field3, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="{Binding Label4}" Margin="0,0,0,2"/>
                    <TextBox Width="100" 
                             mah:TextBoxHelper.Watermark="Field4"
                             BorderThickness="2" 
                             BorderBrush="{StaticResource titleColor2}" 
                             Text="{Binding Field4, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="{Binding Label5}" Margin="0,0,0,2"/>
                    <TextBox Width="100" 
                             mah:TextBoxHelper.Watermark="Field5"
                             BorderThickness="2" 
                             BorderBrush="{StaticResource titleColor2}" 
                             Text="{Binding Field5, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="{Binding Label6}" Margin="0,0,0,2"/>
                    <TextBox Width="100" 
                             mah:TextBoxHelper.Watermark="Field6"
                             BorderThickness="2" 
                             BorderBrush="{StaticResource titleColor2}" 
                             Text="{Binding Field6, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="{Binding Label7}" Margin="0,0,0,2"/>
                    <TextBox Width="100" 
                             mah:TextBoxHelper.Watermark="Field7"
                             BorderThickness="2" 
                             BorderBrush="{StaticResource titleColor2}" 
                             Text="{Binding Field7, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="{Binding Label8}" Margin="0,0,0,2"/>
                    <TextBox Width="100" 
                             mah:TextBoxHelper.Watermark="Field8"
                             BorderThickness="2" 
                             BorderBrush="{StaticResource titleColor2}" 
                             Text="{Binding Field8, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="{Binding Label9}" Margin="0,0,0,2"/>
                    <TextBox Width="100" 
                             mah:TextBoxHelper.Watermark="Field9"
                             BorderThickness="2" 
                             BorderBrush="{StaticResource titleColor2}" 
                             Text="{Binding Field9, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </StackPanel>

            <!-- Butoanele pentru Delete și Save -->
            <Button Content="Delete"
                    Width="80"
                    DockPanel.Dock="Right"
                    Margin="10,15,10,10" 
                    Padding="5"
                    Background="{StaticResource color12}" 
                    Foreground="White" 
                    BorderBrush="Transparent" 
                    FontWeight="Bold"
                    Command="{Binding DeleteCommand}" />

            <Button Content="Save"
                    Width="80"
                    DockPanel.Dock="Right"
                    Margin="10,15,10,10" 
                    Padding="5"
                    Background="{StaticResource titleColor2}" 
                    Foreground="White" 
                    BorderBrush="Transparent" 
                    FontWeight="Bold"
                    Command="{Binding SaveCommand}" />
        </DockPanel>

        <!-- Search Box Section -->
        <Grid Grid.Row="1" Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="123"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="2,0,0,0">
                <TextBlock Text="Optiuni" Margin="0,0,0,2"/>
                <TextBox Width="120"
                         mah:TextBoxHelper.Watermark="Optiuni"
                         Text="{Binding SearchOption, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0,0,0,0">
                <TextBlock Text="{Binding Label1}" Margin="0,0,0,2"/>
                <TextBox Width="120"
                         mah:TextBoxHelper.Watermark="Field1"
                         Text="{Binding SearchField1, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="0,0,0,0">
                <TextBlock Text="{Binding Label2}" Margin="0,0,0,2"/>
                <TextBox Width="120"
                         mah:TextBoxHelper.Watermark="Field2"
                         Text="{Binding SearchField2, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="3" Margin="0,0,0,0">
                <TextBlock Text="{Binding Label3}" Margin="0,0,0,2"/>
                <TextBox Width="120"
                         mah:TextBoxHelper.Watermark="Field3"
                         Text="{Binding SearchField3, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="4" Margin="0,0,0,0">
                <TextBlock Text="{Binding Label4}" Margin="0,0,0,2"/>
                <TextBox Width="120"
                         mah:TextBoxHelper.Watermark="Field4"
                         Text="{Binding SearchField4, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="5" Margin="0,0,0,0">
                <TextBlock Text="{Binding Label5}" Margin="0,0,0,2"/>
                <TextBox Width="120"
                         mah:TextBoxHelper.Watermark="Field5"
                         Text="{Binding SearchField5, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="6" Margin="0,0,0,0">
                <TextBlock Text="{Binding Label6}" Margin="0,0,0,2"/>
                <TextBox Width="120"
                         mah:TextBoxHelper.Watermark="Field6"
                         Text="{Binding SearchField6, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="7" Margin="0,0,0,0">
                <TextBlock Text="{Binding Label7}" Margin="0,0,0,2"/>
                <TextBox Width="120"
                         mah:TextBoxHelper.Watermark="Field7"
                         Text="{Binding SearchField7, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="8" Margin="0,0,0,0">
                <TextBlock Text="{Binding Label8}" Margin="0,0,0,2"/>
                <TextBox Width="120"
                         mah:TextBoxHelper.Watermark="Field8"
                         Text="{Binding SearchField8, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="9" Margin="0,0,0,0">
                <TextBlock Text="{Binding Label9}" Margin="0,0,0,2"/>
                <TextBox Width="120"
                         mah:TextBoxHelper.Watermark="Field9"
                         Text="{Binding SearchField9, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Grid>

        <!-- List of Parcels -->
        <ListView Grid.Row="2"
                  ItemsSource="{Binding SavedParcels}"
                  Margin="10,0,30,10">
            <ListView.View>
                <GridView>
                    <!-- Coloana Optiuni -->
                    <GridViewColumn Width="120">
                        <GridViewColumn.Header>
                            <StackPanel>
                                <TextBlock Text="Optiuni" FontWeight="Bold"/>
                                <TextBlock Text="Animale" FontSize="12" Margin="0,5,0,5"/>
                                <TextBlock Text="Grane" FontSize="12"/>
                            </StackPanel>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Option}" Width="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Coloana Field1 -->
                    <GridViewColumn Width="120">
                        <GridViewColumn.Header>
                            <StackPanel>
                                <TextBlock Text="Field1" FontWeight="Bold"/>
                                <TextBlock Text="Denumire" FontSize="12" Margin="0,5,0,5"/>
                                <TextBlock Text="Denumire" FontSize="12"/>
                            </StackPanel>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Field1}" Width="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Coloana Field2 -->
                    <GridViewColumn Width="120">
                        <GridViewColumn.Header>
                            <StackPanel>
                                <TextBlock Text="Field2" FontWeight="Bold"/>
                                <TextBlock Text="Tip Animale" FontSize="12" Margin="0,5,0,5"/>
                                <TextBlock Text="Tip Cultură" FontSize="12"/>
                            </StackPanel>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Field2}" Width="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Coloana Field3 -->
                    <GridViewColumn Width="120">
                        <GridViewColumn.Header>
                            <StackPanel>
                                <TextBlock Text="Field3" FontWeight="Bold"/>
                                <TextBlock Text="Număr Animale" FontSize="12" Margin="0,5,0,5"/>
                                <TextBlock Text="Suprafață (ha)" FontSize="12"/>
                            </StackPanel>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Field3}" Width="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Coloana Field4 -->
                    <GridViewColumn Width="120">
                        <GridViewColumn.Header>
                            <StackPanel>
                                <TextBlock Text="Field4" FontWeight="Bold"/>
                                <TextBlock Text="Tip Mâncare" FontSize="12" Margin="0,5,0,5"/>
                                <TextBlock Text="Tip Irigare" FontSize="12"/>
                            </StackPanel>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Field4}" Width="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Coloana Field5 -->
                    <GridViewColumn Width="120">
                        <GridViewColumn.Header>
                            <StackPanel>
                                <TextBlock Text="Field5" FontWeight="Bold"/>
                                <TextBlock Text="Consum Apă" FontSize="12" Margin="0,5,0,5"/>
                                <TextBlock Text="Îngrășământ (kg)" FontSize="12"/>
                            </StackPanel>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Field5}" Width="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Coloana Field6 -->
                    <GridViewColumn Width="120">
                        <GridViewColumn.Header>
                            <StackPanel>
                                <TextBlock Text="Field6" FontWeight="Bold"/>
                                <TextBlock Text="Vizite Veterinar" FontSize="12" Margin="0,5,0,5"/>
                                <TextBlock Text="Pesticide (L)" FontSize="12"/>
                            </StackPanel>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Field6}" Width="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Coloana Field7 -->
                    <GridViewColumn Width="120">
                        <GridViewColumn.Header>
                            <StackPanel>
                                <TextBlock Text="Field7" FontWeight="Bold"/>
                                <TextBlock Text="Eliminare deșeuri" FontSize="12" Margin="0,5,0,5"/>
                                <TextBlock Text="Producție (kg)" FontSize="12"/>
                            </StackPanel>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Field7}" Width="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Coloana Field8 -->
                    <GridViewColumn Width="120">
                        <GridViewColumn.Header>
                            <StackPanel>
                                <TextBlock Text="Field8" FontWeight="Bold"/>
                                <TextBlock Text="" FontSize="12" Margin="0,5,0,5"/>
                                <TextBlock Text="Tip Sol" FontSize="12"/>
                            </StackPanel>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Field8}" Width="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Coloana Field9 -->
                    <GridViewColumn Width="120">
                        <GridViewColumn.Header>
                            <StackPanel>
                                <TextBlock Text="Field9" FontWeight="Bold"/>
                                <TextBlock Text="" FontSize="12" Margin="0,5,0,5"/>
                                <TextBlock Text="Consum Apă (m³)" FontSize="12"/>
                            </StackPanel>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Field9}" Width="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
