<UserControl x:Class="licenta.View.ExpensesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:licenta.View"
             xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>

        <Style TargetType="Border" x:Key="ChartContainerStyle">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15"
                                    ShadowDepth="3"
                                    Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10" Background="#FFF8F9FE">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0 0 0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Margin="0 0 10 -10" Style="{StaticResource ChartContainerStyle}"
                    Padding="15">
                <wpf:CartesianChart Series="{Binding MonthlyProfitLoss}"
                                   AnimationsSpeed="0:0:0.3"
                                   Hoverable="True"
                                   >

                    <wpf:CartesianChart.SeriesColors>
                        <wpf:ColorsCollection>
                            <Color>#FF4CAF50</Color> <Color>#FFE57373</Color> </wpf:ColorsCollection>
                    </wpf:CartesianChart.SeriesColors>

                    <wpf:CartesianChart.AxisX>
                        <wpf:Axis Title="Luni"
                                Labels="{Binding Months}"

                                FontSize="12"
                                LabelsRotation="-45">
                            <wpf:Axis.Separator>
                                <wpf:Separator StrokeThickness="0.5" Stroke="#EEE"/>
                            </wpf:Axis.Separator>
                        </wpf:Axis>
                    </wpf:CartesianChart.AxisX>

                    <wpf:CartesianChart.AxisY>
                        <wpf:Axis Title="Suma (RON)"
                                LabelFormatter="{Binding AmountFormatter}"
                                FontSize="12">
                            <wpf:Axis.Separator>
                                <wpf:Separator StrokeThickness="0.5" Stroke="#EEE"/>
                            </wpf:Axis.Separator>
                        </wpf:Axis>
                    </wpf:CartesianChart.AxisY>

                    <wpf:CartesianChart.DataTooltip>
                        <wpf:DefaultTooltip BulletSize="10"
                                          ShowTitle="False"
                                          CornerRadius="4"
                                          Background="#FFF"
                                          BorderBrush="#EEE"/>
                    </wpf:CartesianChart.DataTooltip>
                </wpf:CartesianChart>
            </Border>

            <Border Grid.Column="1"
                    Margin="0 0 0 -10" Style="{StaticResource ChartContainerStyle}"
                    Padding="15">
                <wpf:PieChart Series="{Binding ExpensePercentages}"
                            LegendLocation="Right"
                            InnerRadius="30"
                            Hoverable="True"
                            AnimationsSpeed="0:0:0.5">

                    <wpf:PieChart.ChartLegend>
                        <wpf:DefaultLegend BulletSize="12"
                                          FontWeight="SemiBold"
                                          Foreground="#444"/>
                    </wpf:PieChart.ChartLegend>

                    <wpf:PieChart.DataTooltip>
                        <wpf:DefaultTooltip BulletSize="12"
                                          ShowTitle="False"
                                         />
                    </wpf:PieChart.DataTooltip>

                    <wpf:PieChart.Resources>
                        <Style TargetType="wpf:PieSeries">
                            <Setter Property="Stroke" Value="#FFF"/>
                            <Setter Property="StrokeThickness" Value="2"/>
                            <Setter Property="DataLabels" Value="True"/>
                            <Setter Property="LabelPosition" Value="InsideSlice"/>
                        </Style>
                    </wpf:PieChart.Resources>
                </wpf:PieChart>
            </Border>
        </Grid>

        <Border Grid.Row="1" Style="{StaticResource ChartContainerStyle}" Padding="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>

        <!-- Parcel Selection ComboBox -->
        <ComboBox Grid.Column="0" Grid.Row="0"
                ItemsSource="{Binding Parcels}"
                SelectedItem="{Binding SelectedParcel}"
                Margin="0 0 10 5"/>

        <!-- Category Input -->
        <TextBox Grid.Column="1" Grid.Row="0"
                Text="{Binding NewCategory, UpdateSourceTrigger=PropertyChanged}"
                Margin="0 0 10 5"/>

        <!-- Value Input -->
        <TextBox Grid.Column="2" Grid.Row="0"
                Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                Margin="0 0 0 5"/>

        <!-- Existing Categories ComboBox -->
        <ComboBox Grid.Column="1" Grid.Row="1"
                ItemsSource="{Binding ExistingCategories}"
                SelectedItem="{Binding SelectedCategory}"
                Margin="0 0 10 10"/>

        <!-- Entries ListView -->
        <ListView Grid.ColumnSpan="3" Grid.Row="2"
                ItemsSource="{Binding Entries}"
                Margin="0 10 0 0"
                BorderThickness="1"
                Width="480">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ParcelÄƒ" DisplayMemberBinding="{Binding ParcelName}" Width="120"/>
                    <GridViewColumn Header="Categorie" DisplayMemberBinding="{Binding Category}" Width="120"/>
                    <GridViewColumn Header="Valoare" DisplayMemberBinding="{Binding ValueString}" Width="120"/>
                    <GridViewColumn Header="Data/Ora" DisplayMemberBinding="{Binding Date}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Border>
    </Grid>
</UserControl>