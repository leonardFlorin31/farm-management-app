<UserControl x:Class="licenta.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:licenta.View"
             xmlns:viewModel="clr-namespace:licenta.ViewModel"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.Resources>
        <Style x:Key="defaultListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource color1}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MainCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Color="#E0E0E0" Opacity="0.3" BlurRadius="15"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="320" />
        </Grid.ColumnDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="0" Margin="0,0,20,0">
            <StackPanel>
                <!-- Header Section -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,40">
                    <fa:IconImage Icon="House" Style="{StaticResource menuButtonIcon}" Foreground="{StaticResource color1}" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock FontSize="24" FontWeight="Bold" Foreground="{StaticResource titleColor1}">
                            <Run Text="Bine ai venit,"/>
                            <Run Text="{Binding UserFullName}" Foreground="{StaticResource color1}"/>
                            <Run Text="!"/>
                        </TextBlock>
                        <TextBlock FontSize="14" Foreground="Gray" Margin="0,5,0,0">
                            <Run Text="Rolul dumneavoastră curent este"/>
                            <Run Text="{Binding CurrentUserRole}" FontWeight="SemiBold" Foreground="{StaticResource color1}"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Main Content Grid for better layout -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Role Assignment Card -->
                    <Border Grid.Row="0" Style="{StaticResource MainCardStyle}" MinWidth="800" MaxWidth="950" HorizontalAlignment="Left">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,35">
                                <fa:IconImage Icon="UserGear" Foreground="{StaticResource color1}" Width="28" Height="28"/>
                                <TextBlock Text="Atribuire rol nou" FontSize="22" FontWeight="Bold" Foreground="{StaticResource titleColor1}" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Nume utilizator:" FontSize="16" Margin="0,0,0,12" FontWeight="Medium"/>
                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                             FontSize="16" 
                                             Padding="12" 
                                             BorderThickness="1" 
                                             BorderBrush="#E0E0E0"
                                             Background="#F8F9FA"
                                             Height="50"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Rol:" FontSize="16" Margin="0,0,0,12" FontWeight="Medium"/>
                                    <ComboBox ItemsSource="{Binding Roles}" 
                                              SelectedItem="{Binding SelectedRole, Mode=TwoWay}" 
                                              FontSize="16" 
                                              Padding="18,12"
                                              Background="#F8F9FA"
                                              BorderBrush="#E0E0E0"
                                              Height="50"/>
                                </StackPanel>
                            </Grid>

                            <Button Content="Atribuie Rol" 
                                    Command="{Binding TestCommand}" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    HorizontalAlignment="Left"
                                    MinWidth="180"
                                    Height="45"
                                    FontSize="16"
                                    Margin="0,35,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Info Section to fill space -->
                    <Border Grid.Row="1" Style="{StaticResource MainCardStyle}" MinWidth="800" MaxWidth="950" HorizontalAlignment="Left" Margin="0,20,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <fa:IconImage Icon="InfoCircle" Foreground="{StaticResource color1}" Width="20" Height="20"/>
                                <TextBlock Text="Informații importante" FontSize="18" FontWeight="Bold" Foreground="{StaticResource titleColor1}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel>
                                <Border Background="#E3F2FD" Padding="15" CornerRadius="8" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage Icon="Shield" Foreground="#1976D2" Width="16" Height="16" Margin="0,0,10,0"/>
                                        <TextBlock Text="Rolurile determină permisiunile utilizatorilor în sistem." FontSize="13" Foreground="#1976D2" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="#E8F5E8" Padding="15" CornerRadius="8" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage Icon="Check" Foreground="#388E3C" Width="16" Height="16" Margin="0,0,10,0"/>
                                        <TextBlock Text="Rolurile pot fi atribuite si actualizate de către administrator de câte ori este nevoie." FontSize="13" Foreground="#388E3C" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="#FFF3E0" Padding="15" CornerRadius="8" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage Icon="ExclamationTriangle" Foreground="#F57C00" Width="16" Height="16" Margin="0,0,10,0"/>
                                        <TextBlock Text="Sarcinile pot fi vizualizate doar de Managerul/Administratorul care le atribuie și angajatul care are atribuită sarcina." FontSize="13" Foreground="#F57C00" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="#FFF3E0" Padding="15" CornerRadius="8">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage Icon="ExclamationTriangle" Foreground="DarkRed" Width="16" Height="16" Margin="0,0,10,0"/>
                                        <TextBlock Text="Ștergerea unei parcele nu este permanenta, însa informațiile atribuite sunt!" FontSize="13" Foreground="DarkRed" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Sidebar -->
        <Border Grid.Column="1" CornerRadius="12" Background="White">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#E0E0E0" Opacity="0.3" BlurRadius="15"/>
            </Border.Effect>
            <StackPanel Margin="20">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <fa:IconImage Icon="Users" Foreground="{StaticResource color1}" Width="20" Height="20"/>
                    <TextBlock Text="Colegi" FontSize="18" FontWeight="Bold" Foreground="{StaticResource titleColor1}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                
                <ListView ItemsSource="{Binding Colleagues}" 
                          BorderThickness="0" 
                          Background="Transparent" 
                          ItemContainerStyle="{StaticResource defaultListViewItemStyle}"
                          Margin="0,0,0,20">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F8F9FA" Padding="10" CornerRadius="8" Margin="0,0,0,5">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="UserCircle" Foreground="{StaticResource color1}" VerticalAlignment="Center" Width="20" Height="20"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="13" Margin="10,0,0,0" Foreground="#333" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- System Status -->
                <Border Background="#F8F9FA" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <fa:IconImage Icon="Server" Foreground="{StaticResource color1}" Width="16" Height="16"/>
                            <TextBlock Text="Status sistem" FontSize="14" FontWeight="Bold" Foreground="{StaticResource titleColor1}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#4CAF50" Margin="0,0,8,0"/>
                            <TextBlock Text="Online" FontSize="12" Foreground="#4CAF50" FontWeight="Medium"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>