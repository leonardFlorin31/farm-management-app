<UserControl x:Class="licenta.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:licenta.View"
             xmlns:viewModel="clr-namespace:licenta.ViewModel"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <fa:IconImage Icon="House"
                      Style="{StaticResource menuButtonIcon}"
                      Foreground="{StaticResource color1}"
                      Margin="0,0,10,0"
                      Grid.Row="0" Grid.Column="0"/>

        <!-- Greeting -->
        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Hello, " FontSize="18" VerticalAlignment="Center"
                   FontWeight="Bold"
                   Foreground="{StaticResource color1}">
            <Run Text="{Binding UserName}" FontWeight="Bold"/>
            <Run Text="!"/>
        </TextBlock>
        <!-- Form Title -->
        
        
        

        <Border
            Grid.Row="1" Grid.ColumnSpan="2"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Width="400">
        <!-- Input Fields -->
        <StackPanel Orientation="Vertical"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Width="400">

            
            <!-- Name Input -->
            <TextBlock Text="username:"
                       FontSize="16"
                       Margin="0,10,0,5"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="14"
                     Padding="5"
                     Margin="0,0,0,10"/>

            <!-- Email Input -->
            <TextBlock Text="Role:"
                       FontSize="16"
                       Margin="0,10,0,5"/>
            <ComboBox Width="100"
                      ItemsSource="{Binding Roles}"
                      SelectedItem="{Binding SelectedRole, Mode=TwoWay}" />
            
            
            <Button Margin="10"
                    Content="test"
                    Command="{Binding TestCommand}"></Button>
            
        </StackPanel>
        </Border>
    </Grid>
</UserControl>
