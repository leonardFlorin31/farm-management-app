<UserControl x:Class="licenta.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:licenta.View"
             xmlns:viewModel="clr-namespace:licenta.ViewModel"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    
    
     <UserControl.Resources>
        <Style x:Key="defaultListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="240" />
        </Grid.ColumnDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="0" Margin="0,0,20,0">
            <StackPanel Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconImage Icon="House" Style="{StaticResource menuButtonIcon}" Foreground="{StaticResource color1}" Margin="0,0,10,0"/>
                    <TextBlock FontSize="20" FontWeight="Normal" Foreground="{StaticResource titleColor1}" VerticalAlignment="Center">
                        <Run Text="Bine ai venit,"/>
                        <Run Text="{Binding UserFullName}" FontWeight="Bold"/>
                        <Run Text="!"/>
                    </TextBlock>
                </StackPanel>

                <TextBlock FontSize="14" Foreground="Gray" Margin="0,35,100,35">
                    <Run Text="Rolul dumneavoastrÄƒ curent este"/>
                    <Run Text="{Binding CurrentUserRole}" FontWeight="SemiBold" Foreground="{StaticResource color1}"/>
                </TextBlock>

                <Border CornerRadius="8" Padding="25" Background="White">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="1" Color="#E0E0E0" Opacity="0.5" BlurRadius="10"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Atribuire rol nou" FontSize="18" FontWeight="Bold" Foreground="{StaticResource titleColor1}" Margin="0,0,30,15"/>

                        <TextBlock Text="Nume utilizator:" FontSize="14" Margin="0,10,30,5"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Padding="8" BorderThickness="1" BorderBrush="#DBDBDB"/>

                        <TextBlock Text="Rol:" FontSize="14" Margin="0,15,0,5"/>
                        <ComboBox ItemsSource="{Binding Roles}" SelectedItem="{Binding SelectedRole, Mode=TwoWay}" FontSize="14" Padding="8,5"/>

                        <Button Content="Atribuie Rol" 
                                Command="{Binding TestCommand}" 
                                Margin="0,25,0,0" 
                                HorizontalAlignment="Left"
                                Padding="15,8"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Column="1" CornerRadius="8" Background="White">
             <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="#E0E0E0" Opacity="0.5" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel Margin="15">
                <TextBlock Text="Colegi" FontSize="18" FontWeight="Bold" Foreground="{StaticResource titleColor1}" Margin="5,0,0,10"/>
                <ListView ItemsSource="{Binding Colleagues}" BorderThickness="0" Background="Transparent" ItemContainerStyle="{StaticResource defaultListViewItemStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5,8">
                                <fa:IconImage Icon="UserCircle" Foreground="#B0B0B0" VerticalAlignment="Center" Width="20" Height="20"/>
                                <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="14" Margin="12,0,0,0" Foreground="#333"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>